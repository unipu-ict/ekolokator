<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="1"
    android:gravity="center">
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:id="@+id/imgPicture"
        android:layout_gravity="center_horizontal"
        android:layout_weight="0.4"
        android:src="@drawable/frame_only_image"
        android:theme="@style/Slika"
        />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:text="Dodajte fotografiju"
        android:layout_gravity="center_horizontal"
        android:id="@+id/dodaj_sliku"
        android:theme="@style/CommonBtn"
        android:background="@drawable/common_btn"
        android:layout_weight="0.1"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:id="@+id/opisSlike"
        android:layout_weight="0.3"
        android:hint="Unesite opis onečišćenja koje želite prijaviti."
        android:gravity="top" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center|bottom"
        android:layout_weight="0.2">

        <Button
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:id="@+id/natrag"
            android:background="@drawable/ic_arrow_left"
            android:layout_marginBottom="5dp"
            android:layout_marginRight="50dp"
            android:layout_gravity="center_horizontal" />
        <Button
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:id="@+id/dalje"
            android:background="@drawable/ic_arrow_right"
            android:layout_marginBottom="5dp"
            android:layout_marginLeft="50dp"
            android:layout_gravity="center_horizontal" />
    </LinearLayout>
</LinearLayout>